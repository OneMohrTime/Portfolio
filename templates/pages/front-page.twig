{% extends 'templates/base.twig' %}

{% block content %}
	
	{% if swiper %}
	<section class="homepage__swipers">
		
		<div id="home_parallax" class="swiper-container">
			<div class="parallax-bg" data-swiper-parallax="-33%">
				<img src="{{ post.thumbnail.src('thumbnail') }}"
					 width="{{ post.thumbnail.width }}" height="{{ post.thumbnail.height }}"
					 alt="banner for derek mohr's portfolio"
					 class="swiper__image"
					 srcset="{{ post.thumbnail.src('medium') }} 500w,
							 {{ post.thumbnail.src('large') }} 1000w,
							 {{ post.thumbnail.src('full') }} 1500w"
					 sizes="(max-width: {{ post.thumbnail.width }}px) 100vw, {{ post.thumbnail.width }}px" />
			</div>
			<div class="swiper-wrapper">
				{% for slide in swiper %}
					<div class="swiper-slide"></div>
				{% endfor %}
			</div>
		</div>
		<div id="home_frame_2" class="swiper-container">
			<div class="swiper-wrapper">
				{% for slide in swiper %}
				<div class="swiper-slide swiper-frame-2">
					<div class="swiper-slide__frame"></div>
				</div>
				{% endfor %}
			</div>
		</div>
		<div id="home_frame_1" class="swiper-container">
			<div class="swiper-wrapper">
				{% for slide in swiper %}
				<div class="swiper-slide swiper-frame-1">
					<div class="swiper-slide__frame"></div>
				</div>
				{% endfor %}
			</div>
		</div>
		
		<div id="home_banner" class="swiper-container">
			
			<div class="swiper-button-prev swiper-button-white"></div>
			<div class="swiper-button-next swiper-button-white"></div>
			
			<div class="swiper-pagination swiper-pagination-white"></div>
			
			<div class="swiper-wrapper">
				{% for slide in swiper %}
				<div class="swiper-slide">
					
					<h2 class="swiper-slide__title" data-swiper-parallax="-1000" data-swiper-parallax-duration="500">
						{{ slide.title }}
					</h2>
					
					<a href="{{ site.url }}{{ slide.link }}" class="swiper-slide__link" data-swiper-parallax="2000" data-swiper-parallax-duration="500" data-swiper-parallax-opacity="0">Find out more</a>
					
				</div>
				{% endfor %}
			</div>
			
		</div>
	</section>
	{% endif %}
	
	{% if post.get_field('homepage_intro') %}
	<section id="home_intro" class="homepage__intro fade-content">
		{{ post.get_field('homepage_intro') }}
	</section>
	{% endif %}
	
	<section id="home_dribbble" class="homepage__dribbble">
		<div id="dribbbles" class="dribbbles fade-content"></div>
	</section>
	
	{% if about %}
	<figure id="home_about" class="homepage__about fade-content">
		
		<img src="{{ TimberImage(about.image).src }}"
			 width="{{ about.image.width }}" height="{{ about.image.height }}"
			 alt="{{ about.image.alt }}"
			 class="homepage__about--image"
			 srcset="{{ TimberImage(about.image).src('medium') }} 500w,
					 {{ TimberImage(about.image).src('large') }} 1000w,
					 {{ TimberImage(about.image).src('full') }} 1500w"
			 sizes="(max-width: {{ about.image.width }}px) 100vw, {{ about.image.width }}px" />
		
		<figcaption class="homepage__about--content fade-content">
			{{ about.text }}
		</figcaption>
		
	</figure>
	{% endif %}
	
	{% if post.get_field('homepage_feature') %}
	<section id="home_features" class="homepage__portfolio fade-content">
		{% for post in post.get_field('homepage_feature') %}
			
			<div class="feature fade-content">
				
				<img src="{{ post.thumbnail.src('thumbnail') }}"
					 width="{{ post.thumbnail.width }}"
					 height="{{ post.thumbnail.height }}"
					 alt="slide image for {{ post.post_title }}"
					 class="feature__image"
					 srcset="{{ post.thumbnail.src('medium') }} 500w,
							 {{ post.thumbnail.src('large') }} 1000w,
							 {{ post.thumbnail.src }} 1500w"
					 sizes="(max-width: {{ post.thumbnail.width }}px) 100vw, {{ post.thumbnail.width }}px" />
				
				<div class="feature__content">
					<h2 class="feature__content--title">{{ post.title }}</h2>
					<div class="wysiwyg">
						<p>{{ post.post_excerpt }}</p>
					</div>
					<div class="feature__read-more">Read on <i class="fas fa-long-arrow-alt-right"></i></div>
				</div>
				
				<a href="{{ post.link }}" class="feature__link"></a>
			</div>
			
		{% endfor %}
	</section>
	{% endif %}
	
	<article id="home_content" class="homepage__work fade-content wysiwyg">
		{{ post.content }}
		<a href="{{ TimberPost(638).link }}">See Featured Projects <span class="fas fa-long-arrow-alt-right"></span></a>
	</article>
	
{% endblock %}