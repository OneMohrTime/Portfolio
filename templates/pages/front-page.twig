{% extends 'templates/base.twig' %}
{% set displaySidebar = true %}

{% block content %}
	<section id="home_banner" class="banner -typographic -yellow">

		<ul id="home_banner_list" class="banner__list get-faded">
			{% for link in links %}
				{% set link = link.link %}
				<li class="banner__listItem">
					<a href="{{ link.url }}" class="banner__link">{{ link.title }}</a>
					{% if not loop.last %}//&nbsp;{% endif %}
				</li>
			{% endfor %}
		</ul>

		<div id="home_intro" class="banner__intro">
			<div class="_line"></div>
			<h2 id="home_title" class="_title _wysiwyg">
				<span class="-row">Developer for <a href="//mightyinthemidwest.com/" target="_blank" rel="noopener" title="Mighty In The Midwest" class="intro__link">Mighty</a> by day,</span>
				<span class="-row"><a href="{{ site.link }}/travel/" class="intro__link">Traveling</a> designer by night.</span>
			</h2>
			<p class="_tagline get-faded"><span>Derek Mohr // </span><span>Grand Rapids, MI // </span><a href="//www.instagram.com/onemohrtimedesign/" target="_blank" rel="noopener" title="OneMohrTimeDesign's Instagram" class="banner__link">@OneMohrTime</a></p>
		</div>
	</section>

	<section id="home_dribbble" class="homepage__dribbble">
		<h2 class="dribbble__title">Recent Designs on Dribbble</h2>
		<div id="dribbbles" class="dribbbles"></div>
	</section>

	{% if about %}
		<figure id="home_about" class="homepage__about">

			<img src="{{ Image(about.image).src }}"
				alt="{{ about.image.alt }}"
				class="homepage__about--image"
				srcset="{{ Image(about.image).src('medium') }} 1000w,
						{{ Image(about.image).src('large') }} 1500w" />

			<figcaption class="homepage__about--content _wysiwyg get-faded">
				{{ about.text }}
			</figcaption>

		</figure>
	{% endif %}

	{# Add Section Repeater #}
	{% if post.sections|length %}
		<div class="homepage__builder">
			{% include 'partials/builder.twig' %}
		</div>
	{% endif %}

{% endblock %}

{% block sidebar %}
	{% include 'blocks/sidebar.twig' %}
{% endblock %}
