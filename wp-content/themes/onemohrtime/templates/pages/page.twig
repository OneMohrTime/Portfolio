{% extends 'templates/base.twig' %}

{% block content %}
{% for post in posts %}

<figure class="halfie__image">
	<div class="halfie__image--sticky">
		<img src="{{ post.thumbnail.src('thumbnail') }}"
			 alt="Photo of myself"
			 class=""
			 srcset="{{ post.thumbnail.src('medium') }} 500w,
					 {{ post.thumbnail.src('large') }} 1000w,
					 {{ post.thumbnail.src('full') }} 1500w" />
	</div>
</figure>

<article class="halfie__content fade-content">
	
	{% include 'blocks/page-header.twig' %}
	
	<div class="fade-content wysiwyg">
		{{ post.content }}
	</div>
	
	<footer class="halfie__footer">
	</footer>
	
</article>

{% endfor %}
{% endblock %}